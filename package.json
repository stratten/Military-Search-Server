{
  "name": "scra-proxy-server",
  "version": "1.0.0",
  "description": "Proxy server for SCRA single record requests via Salesforce integration.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "node config/testScraAutomation.js",
    "postinstall": "npx playwright install firefox && npx playwright install-deps"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pdf-parse": "^1.1.1",
    "playwright": "1.48.2",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "railway": {
    "variables": {
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "NODE_ENV": "production"
    },
    "resources": {
      "memory": "32GB",
      "cpu": "32vCPU"
    }
  }
}
